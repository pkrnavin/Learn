<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>LearnUI</display-name>
	<!-- TODO: Version number, Date, to add of build release -->
	
	<!-- Init servlet for context parameters initialization  -->
	<!-- ========================================================== -->
	<!-- Context Parameters -->
	<!-- ========================================================== -->
	
	<!-- Version, from `RLIM` adds (i.e. `ResileoLabs-Incident-Management`); the below number, DateTime `2018-09-16 19:06`, is from git copy, paste added on -->
	
	<!-- Version number -->
	<context-param>
		<param-name>version</param-name>
		<param-value>1.0.001 Beta</param-value>
		<!--	Major.Minor.Build	-->
	</context-param>
	<context-param>
		<param-name>VersionLastUpdate</param-name>
		<param-value>2018-11-15 10:20</param-value>
	</context-param>
	<context-param>
		<description>Constant file properties</description>
		<param-name>CONSTANTS_PROPERTIES_FILE_PATH</param-name>
		<param-value>/WEB-INF/classes/com/openlearning/learn/resource/Constants.properties</param-value>
	</context-param>
	
	
	
