	<!-- ========================================================== -->
	<!-- Servlets -->
	<!-- ========================================================== -->
	
	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>com.openlearning.learn.servlet.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	
	<servlet>
		<servlet-name>LoginController</servlet-name>	<!-- //servlet name -->
		<servlet-class>com.openlearning.learn.controller.LoginController</servlet-class>	<!-- //servlet class -->
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>	<!-- //servlet name -->
		<url-pattern>/loginSession</url-pattern>	<!-- //how it should appear -->
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/logoutSession</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>com.openlearning.learn.controller.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/reloadConfigProperties</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/getLoginUserDetails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/isSessionExists</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>StudentDetailsController</servlet-name>
		<servlet-class>com.openlearning.learn.controller.StudentDetailsController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentDetailsController</servlet-name>
		<url-pattern>/addStudentDetails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentDetailsController</servlet-name>
		<url-pattern>/getUserStudentsDetails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentDetailsController</servlet-name>
		<url-pattern>/getUserStudentDetails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentDetailsController</servlet-name>
		<url-pattern>/updateStudentDetails</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentDetailsController</servlet-name>
		<url-pattern>/deleteRow</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentDetailsController</servlet-name>
		<url-pattern>/getStudentRecordHistoryDetails</url-pattern>
	</servlet-mapping>
	
	
	
	<!-- ========================================================== -->
	<!-- Welcome Files -->
	<!-- ========================================================== -->
	
	<!-- start-up page -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>